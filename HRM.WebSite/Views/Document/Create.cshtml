@model HRM.ViewModels.Document.DocumentViewModel
@using (Html.BeginForm("Create", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page-container">
        <div class="page-content">
            <div class="page-content">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <span class="caption-subject bold uppercase" style="color:#3fbd6c">NHẬP THÔNG TIN</span>
                        </div>
                        <div class="actions">
                            <a class="btn btn-circle btn-icon-only blue" href="javascript:;">
                                <i class="icon-cloud-upload"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only green" href="javascript:;">
                                <i class="icon-wrench"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only red" href="javascript:;">
                                <i class="icon-trash"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form role="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.DropDownListFor(model => model.TypeId, (SelectList)ViewBag.DocumentTypes, new { @class = "select2 form-control " })
                                                <label for="form_control_1">Tên loại văn bản</label>
                                                @*<span class="help-block">Nhập tại đây...</span>*@
                                                @*<i class="fa fa-bell-o"></i>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon" style="margin-top:-23px">
                                                <label for="form_control_1">Ngày đến</label>
                                                @Html.TextBoxFor(model => model.ReceivedDate, new { @type = "date", @class = "form-control" })
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.EditorFor(model => model.FromDepartment, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="form_control_1">Đơn vị ban hành</label>
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="form_control_1">Số ký hiệu văn bản</label>
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon" style="margin-top:-23px">
                                                <label for="form_control_1">Ngày V.bản</label>
                                                @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control" })
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="form_control_1">Trích yếu nội dung</label>
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="form_control_1">Người ký văn bản</label>
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.DropDownListFor(model => model.ReceiveDepartmentId, (SelectList)ViewBag.Departments, new { @class = "select2 form-control " })
                                                <label for="form_control_1">Phòng ban nhận</label>
                                                @*<span class="help-block">Nhập tại đây...</span>*@
                                                @*<i class="fa fa-bell-o"></i>*@
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.DropDownListFor(model => model.SignById, (SelectList)ViewBag.Employees, new { @class = "select2 form-control " })
                                                @*@Html.EditorFor(model => model.ResolvePlace, new { htmlAttributes = new { @class = "form-control" } })*@
                                                <label for="form_control_1">Người nhận</label>
                                                @*<span class="help-block">Some help goes here...</span>*@

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.TextBoxFor(model => model.Link, new { @class = "form-control", type = "file" })
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>                                    
                                    <div class="col-md-3">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.EditorFor(model => model.StorePlace, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="form_control_1">Lưu hồ sơ</label>
                                                @*<span class="help-block">Some help goes here...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-md-3">
            <div class="form-group form-md-line-input has-success form-md-floating-label">
                <div class="input-icon">
                    @Html.EditorFor(model => model.StorePlace, new { htmlAttributes = new { @class = "form-control" } })
                    <label for="form_control_1">Ghi chú</label>
                    @*<span class="help-block">Some help goes here...</span>
                    <i class="fa fa-bell-o"></i>
                </div>
            </div>
        </div>*@

                                </div>
                                <div class="row hide">
                                                                   
                                    <div class="col-md-3">
                                        @Html.EditorFor(model => model.Checked, new { htmlAttributes = new {@class = "hide form-control", @Value = 0 } })
                                        @*@Html.EditorFor(model => model., new { htmlAttributes = new { @class = "hide form-control", placeholder = "1", } })*@
                                    </div>
                                    <div class="col-md-4 hide">                                       
                                        @Html.DropDownListFor(model => model.AssignToId, (SelectList)ViewBag.Employees, new { @class = "hide select2 form-control " })
                                        @*@Html.DropDownListFor(model => model.SignById, (SelectList)ViewBag.Employees, new { @class = "hide select2 form-control " })*@
                                        @Html.DropDownListFor(model => model.WriteById, (SelectList)ViewBag.Employees, new { @class = "hide select2 form-control " })
                                        @Html.DropDownListFor(model => model.ReceiveDepartmentId, (SelectList)ViewBag.Employees, new { @class = "hide select2 form-control " })
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions noborder">
                                <button type="submit" class="btn green-meadow">Lưu lại</button>
                                <button type="button" class="btn default">@Html.ActionLink("Hủy", "Index")</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}