                            <th>
                                Loại hợp đồng
                            </th>
                            <th>Số hợp đồng</th>
                            <th>Từ ngày</th>
                            <th>Đến ngày</th>
                            <th>Tệp tin</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Contracts)
                        {
                        <tr class="odd gradeX">
                            <td>
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="checkboxes" value="1" />
                                    <span></span>
                                </label>
                            </td>
                            <td>
                                @item.Employee.LastName.Trim() - @item.Employee.FirstName.Trim()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentContractType.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContractNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.From)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.To)
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Document)"> @Html.DisplayFor(modelItem => item.Document)</a>
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
