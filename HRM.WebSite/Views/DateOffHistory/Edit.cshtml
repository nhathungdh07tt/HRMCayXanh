@using HRM.Common
@model HRM.ViewModels.Employee.DateOffHistoryViewModel
<div class="page-container">
    <div class="page-content">
        <div class="page-content">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <span class="caption-subject bold uppercase" style="color:#3fbd6c">NHẬP THÔNG TIN</span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only blue" href="javascript:;">
                            <i class="icon-cloud-upload"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only green" href="javascript:;">
                            <i class="icon-wrench"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only red" href="javascript:;">
                            <i class="icon-trash"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    @*@using (Html.BeginForm("Create", "Achievement", FormMethod.Post, new { enctype = "multipart/form-data", @role = "form" }))*@
                    @using (Html.BeginForm("Edit", "DateOffHistory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group form-md-line-input has-success form-md-floating-label inputngaythang">
                                        <div class="input-icon">
                                            @Html.DropDownListFor(model => model.EmployeeId, (SelectList)ViewBag.Employees, new { @class = "select2 form-control " })
                                            <label for="form_control_1">Tên nhân viên</label>
                                            @*<span class="help-block">Some help goes here...</span>*@
                                            @*<i class="fa fa-bell-o"></i>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="col-md-5">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.DropDownListFor(model => model.FromSession, (SelectList)ViewBag.Nghitus, new { @class = "form-control" })
                                                <label for="form_control_1">Nghỉ từ</label>
                                                @*<span class="help-block">Nhập tại đây...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label ngaythang">
                                            <div class="input-icon">
                                                <span>
                                                    <input class="inputngaythang" id="From" name="From" type="date" value="">
                                                </span>
                                                @*<span class="help-block">Some help goes here...</span>*@

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="col-md-5">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label">
                                            <div class="input-icon">
                                                @Html.DropDownListFor(model => model.ToSession, (SelectList)ViewBag.Denlucs, new { @class = "form-control" })
                                                <label for="form_control_1">Đến lúc</label>
                                                @*<span class="help-block">Nhập tại đây...</span>*@
                                                <i class="fa fa-bell-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group form-md-line-input has-success form-md-floating-label ngaythang">
                                            <div class="input-icon">
                                                <span>
                                                    <input class="inputngaythang" id="To" name="To" type="date" value="">
                                                </span>
                                                @*<span class="help-block">Some help goes here...</span>*@

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group form-md-line-input has-success form-md-floating-label">
                                        <div class="input-icon">
                                            @Html.DropDownListFor(model => model.HasPermission, (SelectList)ViewBag.Pheps, new { @class = "form-control" })
                                            <label for="form_control_1">Xác nhận nghỉ</label>
                                            @*<span class="help-block">Nhập tại đây...</span>*@
                                            <i class="fa fa-bell-o"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group form-md-line-input has-success form-md-floating-label">
                                        <div class="input-icon">
                                            @Html.DropDownListFor(model => model.TotalDate, (SelectList)ViewBag.TotalDates, new { @class = "form-control" })
                                            <label for="form_control_1">Số ngày nghỉ</label>
                                            @*<span class="help-block">Nhập tại đây...</span>*@
                                            <i class="fa fa-bell-o"></i>
                                        </div>
                                    </div>
                                    @if (TempData["AlertMessage"] != null)
                                    {
                                        <div class="alert alert-danger">
                                            Số ngày nghỉ phép chỉ còn @TempData["AlertMessage"] ngày!
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group form-md-line-input has-success form-md-floating-label">
                                        <div class="input-icon">
                                            @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control" } })
                                            <label for="form_control_1">Lý do nghỉ</label>
                                            @*<span class="help-block">Some help goes here...</span>*@
                                            <i class="fa fa-bell-o"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions noborder">
                            <button type="submit" class="btn green-meadow">Lưu lại</button>
                            <button type="button" class="btn default">@Html.ActionLink("Hủy", "Index")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
